<%- include layouts/header.ejs %>

        <div class="page-data">
         <div class="data-table">
            <table border="1" cellpadding="7" cellspacing="7">
                <tr>
                    <th width="50px">No</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th width="120px">Action</th>
                </tr>

                <% if(data.length){

                 for(var i = 0;i < data.length;i++) { %>

                <tr>
                    <td><%=(i+1)%></td>
                    <td><%=data[i].name%></td>
                    <td><%=data[i].parent_name%></td>
                    <td>
                        <a class="a-inside edit" href="../categories/edit/<%=data[i].id%>">Edit</a>

                        <a class="a-inside delete" href="../categories/delete/<%=data[i].id%>">Delete</a>

                    </td>
                </tr>
            <% }

             }else{ %>
                 <tr>
                    <td colspan="3">No categories</td>
                 </tr>
            <% } %>



            </table>
         </div>
		 <div class="data-btn">
           <button onClick="addCategory();">+ Add</button>
         </div>
        </div>

